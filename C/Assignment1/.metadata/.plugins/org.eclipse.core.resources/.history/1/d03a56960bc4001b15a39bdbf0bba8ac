int main(void)
{
	//PrintSentence();
	PrintNumber();
}

void PrintSentence(void)
{
	printf("C Programming");
}

void PrintNumber(void)
{
	int num;
	printf("Enter an integer: ");
	fflush(stdout);

	scanf("%d", &num);
	fflush(stdin);

	printf("You entered: %d", num);

}
